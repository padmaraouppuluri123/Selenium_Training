import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import io.github.bonigarcia.wdm.WebDriverManager;

public class login {
	public static void main(String[] args) {
		
		  WebDriverManager.chromedriver().setup();
	        WebDriver driver = new ChromeDriver();

	        try {
	            driver.get("https://thomasdigital.com/");
	            driver.manage().window().maximize();

	            WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(15));  // Increased wait time

	            // Hover over "Services"
	            WebElement servicesMenu = wait.until(
	                ExpectedConditions.visibilityOfElementLocated(By.xpath("//a[text()='Services']"))
	            );

	            Actions actions = new Actions(driver);
	            actions.moveToElement(servicesMenu).perform();

	            // Wait for the "Website Design" to be visible
	            WebElement websiteDesign = wait.until(
	                ExpectedConditions.visibilityOfElementLocated(By.xpath("/html/body/header/div/div/div/div[1]/nav/div[2]/div[1]/ul/li[2]/ul/li[1]/a"))
	            );

	            // Scroll the element into view
	            ((JavascriptExecutor) driver).executeScript("arguments[0].scrollIntoView(true);", websiteDesign);

	            // Now wait for the element to be clickable
	            wait.until(ExpectedConditions.elementToBeClickable(websiteDesign));

	            // Click the element
	            websiteDesign.click();

	            // Validate URL
	            if (driver.getCurrentUrl().contains("website-design")) {
	                System.out.println("✅ Successfully navigated to Website Design page.");
	            } else {
	                System.out.println("❌ Navigation failed.");
	            }

	        } catch (Exception e) {
	            e.printStackTrace();
	        } finally {
	            driver.quit();
	        }
	    }
	}