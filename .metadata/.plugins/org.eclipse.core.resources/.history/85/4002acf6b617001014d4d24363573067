import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

import io.github.bonigarcia.wdm.WebDriverManager;

public class login {
	public static void main(String[] args) {
		
		 // Setup ChromeDriver
        WebDriverManager.chromedriver().setup();
        WebDriver driver = new ChromeDriver();

        try {
            // Open the website
            driver.get("https://thomasdigital.com/");
            driver.manage().window().maximize();
            Thread.sleep(3000); // Wait for the page to load

            // Step 1: Hover over the "Services" menu
            WebElement servicesMenu = driver.findElement(By.xpath("//a[text()='Services']"));
            Actions actions = new Actions(driver);
            actions.moveToElement(servicesMenu).perform();
            Thread.sleep(2000); // Wait for dropdown to appear

            // Step 2: Click on "Website Design"
            WebElement websiteDesign = driver.findElement(By.xpath("//a[text()='Website Design']"));
            websiteDesign.click();
            Thread.sleep(3000);

            // Step 3: Verify the page
            String currentURL = driver.getCurrentUrl();
            if (currentURL.contains("website-design")) {
                System.out.println("✅ Successfully navigated to Website Design page.");
            } else {
                System.out.println("❌ Failed to navigate. Current URL: " + currentURL);
            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            // Close the browser
            driver.quit();
        }
    }
}